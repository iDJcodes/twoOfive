import sys
from random import randint 

def viewPicture(oripic):
  pict = makePicture(oripic)
  pixel = getPixel(pict, 0, 0)
  pixels = getPixels(pict)
  print "width is", getWidth(pict), "height is", getHeight(pict)
  print "The value of the pixel at 0, 0 is: ", pixel
  print "A different way to get the pixel at 0, 0 is: ", pixels[0]
  explore(pict)

def picNegative(oripic):
  pict = makePicture(oripic)
  for px in getPixels(pict):
    red = getRed(px)
    green = getGreen(px)
    blue = getBlue(px)
    negColor = makeColor(255 - red, 255 - green, 255 - blue)
    setColor(px, negColor)
  
  explore(pict)  
  return pict

def picGrey(oripic):
  pict = makePicture(oripic)
  for px in getPixels(pict):
    neoRed = getRed(px)*0.333
    neoGreen = getGreen(px)*0.333
    neoBlue = getBlue(px)*0.333
    lumi = neoRed+neoGreen+neoBlue
    setColor(px, makeColor(lumi,lumi,lumi))
   
  explore(pict)
  return pict

def picPlay(oripic):
  pict = makePicture(oripic)
  for px in getPixels(pict):
    playRed = getRed(px)
    playGreen = getGreen(px)
    playBlue = getBlue(px)
    
    randR = randint(0,1)
    pRed = randR*playRed
    
    randG = randint(0,1)
    pGreen = randG*playGreen
    
    randB = randint(0,1)
    pBlue = randB*playBlue
    
    setColor(px, makeColor(pRed , pGreen, pBlue))
  explore(pict)
  return pict

def picWb(oripic):
  pict = makePicture(oripic)
  for px in getPixels(pict):
    fRed = getRed(px)
    fGreen = getGreen(px)
    fBlue = getBlue(px)
    
    if fRed == 255 and fGreen == 255 and fBlue == 255:
      setColor(px, makeColor(0, 0, 0))
    
  explore(pict)
  return pict
  
## The main body of the code above was functions
